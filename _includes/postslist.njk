<ul reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  
  {% set alt = cycler("", "alt_1") %}
  

  {% for post in postslist  %}

    <li class="postlist-item">
      <article class="article article_preview animate_in {{ alt.next() }}" data-animate-offset="100" itemscope itemprop="blogPost">

        <div class="image">
          <a href="{{ post.url | url }}#more">
            <img class="" src="{{ post.data.image | url }}" alt="{{ post.data.album_credit}}" />
          </a>
          <span class="image_credit">{{ post.data.album_credit }}</span>
        </div>
        

        <div class="copy cut_paste">
          <div class="inner">
            
            <div class="title texture_paper_white">
              <!--<%- partial('post/title', {class_name: 'article-title'}) %>-->
              <p class="column texture_cardboard_black">{{ post.data.column }}</p>
              <a class="title_main" href="{{ post.url | url }}#more">{{ post.data.headline }}</a>
            </div>

            <div class=" snippet texture_paper_white" itemprop="articleBody">
              <p>{{ post.data.snippet }}</p>

              <a class="read_more texture_cardboard_black" href="{{ post.url | url }}#more">
                Read More
              </a>
            </div>

          </div>
        </div>

      </article>

    </li>

  {% endfor %}

</ul>
